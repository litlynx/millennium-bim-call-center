{
  "name": "millenium-bim-call-center",
  "version": "0.0.1",
  "description": "",
  "author": "Jorge Esteves <jorge.esteves@itsector.pt>",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/@config/*",
    "e2e"
  ],
  "scripts": {
    "analyze": "turbo run analyze",
    "rsdoctor": "turbo run rsdoctor",
    "build": "turbo run build",
    "build:local": "cross-env-shell \"HOST_BASE_URL=http://localhost:${REMOTES_PORT:-3333}/ turbo run build\"",
    "dev": "turbo run dev",
    "types:generate": "turbo run types:generate",
    "types:build": "turbo run types:build",
    "biome:check": "turbo run biome:check",
    "biome:check:apply": "turbo run biome:check:apply",
    "biome:staged": "turbo run biome:check:apply -- --staged",
    "biome:lint": "turbo run biome:lint",
    "biome:format": "turbo run biome:format",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "test:watch": "turbo run test:watch",
    "e2e": "turbo e2e",
    "e2e:show-report": "turbo e2e:show-report",
    "typecheck": "turbo run typecheck",
    "ci": "bun run types:build && bun run typecheck && bun run test:ci && bun run biome:check",
    "clean": "rimraf apps/*/node_modules packages/*/node_modules bun.lock node_modules",
    "prepare": "husky",
    "preview": "cross-env-shell \"SHELL_PREVIEW_PORT=8080 SHARED_PREVIEW_PORT=8081 HEADER_PAGES_PREVIEW_PORT=8082 SHARED_HOST_BASE_URL=http://localhost:8081/ HEADER_PAGES_HOST_BASE_URL=http://localhost:8082/ turbo run build --force && bun run preview:serve\"",
    "preview:serve": "cross-env SHELL_PREVIEW_PORT=8080 SHARED_PREVIEW_PORT=8081 HEADER_PAGES_PREVIEW_PORT=8082 concurrently -n shell,shared,header -c green,magenta,cyan \"cd apps/shell && bun run serve:prod\" \"cd packages/shared && bun run serve:prod\" \"cd apps/header-pages && bun run serve:prod\""
  },
  "devDependencies": {
    "dotenv-cli": "^7.4.2",
    "@commitlint/config-conventional": "^19.8.1",
    "@biomejs/biome": "^2.2.2",
    "commitlint": "^19.8.1",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "concurrently": "^9.1.0",
    "lint-staged": "^15.5.2",
    "rimraf": "^6.0.1",
    "serve": "^14.2.5",
    "turbo": "^2.5.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.20"
}
