{
  "include": ["./**/*", "**/*", "package.json"],
  "exclude": [
    "build",
    "dist",
    "coverage",
    "node_modules",
    "rspack/**/*",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/__mocks__/**/*",
    "../../packages/shared/src/**/*",
    "../../packages/@config/bun-test-config/**/*",
    "../../packages/@config/rspack-config/**/*"
  ],
  "extends": "@config/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "shared/*": [
        "../../packages/shared/.wp_federation/shared/dts/src/*",
        "../../packages/shared/.wp_federation/shared/*",
        "../../packages/shared/types/src/*"
      ],
      "headerPages/*": ["../header-pages/.wp_federation/headerPages/*"],
      "sidebarPages/*": ["../sidebar-pages/.wp_federation/sidebarPages/*"],
      "recordsPages/*": ["../records-pages/.wp_federation/recordsPages/*"],
      "documentationPages/*": ["../documentation-pages/.wp_federation/documentationPages/*"]
    }
  }
}
