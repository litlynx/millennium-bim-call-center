{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "root": true,
  "files": {
    "includes": [
      "**",
      "**/*.{ts,tsx,js,jsx}",
      "!node_modules",
      "!dist",
      "!build",
      "!coverage",
      "!.wp_federation",
      "!packages/shared/src/components/ui",
      "!packages/shared/src/assets/icons"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noNestedComponentDefinitions": "warn",
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "noUndeclaredVariables": "error",
        "useExhaustiveDependencies": "warn"
      },
      "a11y": {
        "noStaticElementInteractions": "off",
        "useKeyWithMouseEvents": "off",
        "useKeyWithClickEvents": "off",
        "noSvgWithoutTitle": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "none"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "trailingCommas": "none"
    }
  }
}
